<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Página de Login"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
         <tabs jcr:primaryType="nt:unstructured"
               sling:resourceType="granite/ui/components/coral/foundation/tabs">
            <items jcr:primaryType="nt:unstructured">
               <tab-0 jcr:primaryType="nt:unstructured"
                      jcr:title="Textos"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <loginTitle cq-msm-lockable="./loginTitle"
                                       fieldLabel="Digite um título para a página:"
                                       jcr:primaryType="nt:unstructured"
                                       name="./loginTitle"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <loginParagraph cq-msm-lockable="./loginParagraph"
                                           fieldLabel="Digite um texto para o parágrafo:"
                                           jcr:primaryType="nt:unstructured"
                                           name="./loginParagraph"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        </items>
                     </column>
                  </items>
               </tab-0>
               <tab-1 jcr:primaryType="nt:unstructured"
                      jcr:title="Imagens"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <loginLogoResType jcr:primaryType="nt:unstructured"
                                             name="./loginLogo/sling:resourceType"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                             value="core/wcm/components/image/v2/image"/>
                           <loginLogo allowUpload="{Boolean}false"
                                      autoStart="{Boolean}false"
                                      class="cq-droptarget"
                                      cq-msm-lockable="./loginLogo/file"
                                      fieldLabel="Selecione uma logo:"
                                      fileNameParameter="./loginLogo/fileName"
                                      fileReferenceParameter="./loginLogo/fileReference"
                                      jcr:primaryType="nt:unstructured"
                                      mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                      multiple="{Boolean}false"
                                      name="./loginLogo/file"
                                      sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                      title="Drag to select image"
                                      uploadUrl="${suffix.path}"
                                      useHTML5="{Boolean}true"/>
                           <loginImageResType jcr:primaryType="nt:unstructured"
                                              name="./loginImage/sling:resourceType"
                                              sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                              value="core/wcm/components/image/v2/image"/>
                           <loginImage allowUpload="{Boolean}false"
                                       autoStart="{Boolean}false"
                                       class="cq-droptarget"
                                       cq-msm-lockable="./loginImage/file"
                                       fieldLabel="Selecione uma imagem:"
                                       fileNameParameter="./loginImage/fileName"
                                       fileReferenceParameter="./loginImage/fileReference"
                                       jcr:primaryType="nt:unstructured"
                                       mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                       multiple="{Boolean}false"
                                       name="./loginImage/file"
                                       sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                       title="Drag to select image"
                                       uploadUrl="${suffix.path}"
                                       useHTML5="{Boolean}true"/>
                        </items>
                     </column>
                  </items>
               </tab-1>
               <tab-2 jcr:primaryType="nt:unstructured"
                      jcr:title="Cor do Botão"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <loginButtonColor cq-msm-lockable="./loginButtonColor"
                                             fieldLabel="Escolha uma cor para o botão:"
                                             jcr:primaryType="nt:unstructured"
                                             name="./loginButtonColor"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
                        </items>
                     </column>
                  </items>
               </tab-2>
            </items>
         </tabs>
      </items>
   </content>
</jcr:root>
